@model ShoppingCartModel.GiftCardBoxModel
@using Nop.Web.Models.ShoppingCart;
@if (Model.Display)
{
    <div class="giftcard-box">
        <div class="title">
            @*BEGIN SECC CHANGES*@
            <strong style="color:green; font-size:larger">@T("ShoppingCart.GiftCardCouponCode")</strong>
            @*END SECC CHANGES*@
        </div>
        <div class="hint">@T("ShoppingCart.GiftCardCouponCode.Tooltip")</div>
        <div class="coupon-code">
            @*BEGIN SECC CHANGES*@
            <input name="giftcardcouponcode" type="text" class="gift-card-coupon-code" style="border-color:black"/>&nbsp;
            @*END SECC CHANGES*@
            <input type="submit" name="applygiftcardcouponcode" value="@T("ShoppingCart.GiftCardCouponCode.Button")" class="button-2 apply-gift-card-coupon-code-button" />
        </div>
        @if (!String.IsNullOrEmpty(Model.Message))
        {
            <div class="message">
                @Model.Message
            </div>
        }
    </div>
}